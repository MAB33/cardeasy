  <%= csrf_meta_tags %>
</head>
<body>

	<p class="notice"><%= notice %></p>
	<p class="alert"><%= alert %></p>

	<nav>
		<ul id="navLinks">
			<li><%= link_to 'Home', root_path %></li>
			<%= render 'devise/menu/registration_items' %>
			<%= render 'devise/menu/login_items' %>
		</ul>
	</nav>

<%= yield %>

</body>
</html>
